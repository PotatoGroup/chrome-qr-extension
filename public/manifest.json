{
  "manifest_version": 3,
  "name": "H5 Mobile Preview QR Generator",
  "version": "1.0.0",
  "description": "Generate QR codes for current page to preview on mobile devices while developing H5 component libraries",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "sidePanel",
    "notifications"
  ],
  "action": {
    "default_title": "Generate QR Code",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}